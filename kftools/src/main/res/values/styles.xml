<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="KFTools"/>

    <style name="KFTools.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/whiteColor</item>
        <item name="android:padding">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="backgroundTintMode">screen</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="KFTools.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorPrimary">?colorPrimary</item>
        <item name="android:colorAccent">?colorAccent</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/KFTools.AlertDialog.NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/KFTools.AlertDialog.PositiveButtonStyle</item>
    </style>

    <style name="KFTools.AlertDialog.NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/systemRedColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="KFTools.AlertDialog.PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/secondaryLabelColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="KFTools.DatePickerDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorPrimary">?colorPrimary</item>
        <item name="android:colorAccent">?colorAccent</item>
    </style>

    <style name="KFTools.Button.Plain" parent="KFTools.Button">
        <item name="android:textColor">@color/labelColor</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="KFTools.Button.ColorPicker" parent="KFTools.Button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/kftools_bg_rectangle_round_4</item>
    </style>

    <style name="KFTools.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@drawable/kftools_color_text_selector</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/kftools_bg_edittext</item>
        <item name="android:gravity">left|top</item>
    </style>

    <style name="KFTools.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/KFTools.TextTextAppearance.Body</item>
        <item name="android:textColor">@color/labelColor</item>
    </style>

    <style name="KFTools.TextView.Secondary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondaryLabelColor</item>
    </style>

    <style name="KFTools.TextView.Action" parent="KFTools.TextView">
        <item name="android:textColor">@drawable/kftools_color_text_selector</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/kftools_bg_edittext</item>
        <item name="android:drawableTint" tools:targetApi="m">@drawable/kftools_color_text_selector</item>
    </style>

    <style name="KFTools.TextView.Action.DropDown" parent="KFTools.TextView.Action">
        <item name="android:drawableRight">@drawable/ic_baseline_arrow_drop_down_24</item>
    </style>

    <style name="KFTools.Separator" parent="Theme.KFTools">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="KFTools.Snackbar" parent="Theme.KFTools">
        <item name="android:background">@color/secondarySystemBackgroundColor</item>
    </style>

<!--    old -->

    <style name="kftools.Theme.Transparent"
        parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="kftools.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert"/>

</resources>